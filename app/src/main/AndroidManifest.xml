<?xml version="1.0" encoding="utf-8"?>
<manifest package="eu.toma.dev.playground"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".github.GithubActivity"
            android:label="@string/title_activity_github"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".warcraft.WarcraftActivity"
            android:label="@string/title_activity_warcraft"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".rx_example_one.RxOneActivity"
            android:label="@string/title_activity_rx_one"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".warcraft.mounts.MountsActivity"
            android:label="@string/title_activity_mounts"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".warcraft.talent.TalentsActivity"
            android:label="@string/title_activity_talents"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>